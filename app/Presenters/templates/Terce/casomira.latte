<!DOCTYPE html>
{block content}

<h1 class="main-header" style="font-size: 58px">Výsledková listina</h1>
<br>
<h2 class="main-header">Kategorie muži</h2>
<table>
	<tr>
		<th>Výsledková Listina</th>
		<th>Tým</th>
		<th>Čas</th>
	</tr>
	<tr>
	{foreach $tymy as $tym}
		<td>{$tym->poradi}</td>
		<td>{$tym->Tym}</td>
		<td>{substr($tym->cas->format('%I:%S.%F'),0,8)}</td>
	</tr>
	{/foreach}
</table>
<br>
<h2 class="main-header">Kategorie ženy</h2>
<table>
	<tr>
		<th>Výsledková Listina</th>
		<th>Tým</th>
		<th>Čas</th>
	</tr>
	<tr>
	{foreach $tymy_zeny as $tym}
		<td>{$tym->poradi}</td>
		<td>{$tym->Tym}</td>
		<td>{substr($tym->cas->format('%I:%S.%F'),0,8)}</td>
	</tr>
	{/foreach}
</table>
<br>
<h1 class="main-header">Vložení dat</h1>
<form n:name=uploadForm class="main-text">
	<div>
		<label n:name=tym>Název týmu: <select class="input" n:name=tym></select></label>
		<span class=error n:ifcontent>{inputError tym}</span>
	</div>
	<br>
	<div>
		<label n:name=cas>Čas: <input type="text" n:name=cas required placeholder="00:00.00" oninput="formatTimeInput(this)" inputmode="numeric" step="1"></label>
		<span class=error n:ifcontent>{inputError cas}</span>
	</div>
	<script>
        function formatTimeInput(input) {
            let value = input.value.replace(/\D/g, ''); // Odebrání všech nečíselných znaků
            if (value.length > 6) {
                value = value.substring(0, 6); // Omezení délky na 6 znaků
            }
            if (value.length > 2) {
                value = value.substring(0, 2) + ':' + value.substring(2); // Přidání první dvojtečky
            }
            if (value.length > 5) {
                value = value.substring(0, 5) + '.' + value.substring(5); // Přidání druhé dvojtečky
            }
            input.value = value;
        }
    </script>
	<br>
	<div>
		<input style="background-color: lightgreen;" n:name=send class="btn btn-default">
	</div>
</form>
{/block}